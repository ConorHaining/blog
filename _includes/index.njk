<!doctype html>
<html lang="en">
<head>
	{% include 'head.njk' %}
</head>

<body class="bg-gray-50 dark:bg-gray-800">
	{% include 'header-tall.njk' %}

	<main class="mx-auto px-4 max-w-prose">
		{% for post in collections.posts %}
		<article class="mt-4 leading-none">
			<h2 class="text-xl font-bold hover:underline hover:text-gray-700 text-gray-900 dark:text-white dark:hover:text-gray-300"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
			<span>{{ post.slug }}</span>
			<time datetime="{{ post.date }}"><em class="text-red-600 dark:text-red-400 text-sm">{{ post.date | displayDate }}</em></time>
		</article>
		{% endfor %}
	</main>

	
</body>

</html>