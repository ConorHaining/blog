<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>Conor Haining</title>
	<link rel="stylesheet" type="text/css" href="/assets/main.css" />
</head>

<body class="diary">
	<header class="h-18 text-white py-2">
		<nav class="mx-4 float-right">
			<ul>
				<li class="py-2 px-3 bg-purple-800 md:px-6 cursor-pointer border border-white text-center hover:bg-purple-600 inline-block"><a
						href="/">Home</a></li>
				<li class="py-2 px-3 bg-purple-800 md:px-6 cursor-pointer border border-white text-center hover:bg-purple-600 inline-block"><a href="/diary">Code
						Diary</a></li>
				<li class="py-2 px-3 bg-purple-800 md:px-6 cursor-pointer border border-white text-center hover:bg-purple-600 inline-block"><a
						href="/projects">Projects</a></li>
			</ul>
		</nav>

		<div class="py-2 px-6 md:px-12 ld:px-32 xl:px-48">
			<h1 class="text-4xl font-extrabold">Conor Haining</h1>
		</div>

	</header>

	<main class="list-disc py-4 px-6 md:px-12 ld:px-32 xl:px-48">
		<h1 class="text-5xl">Code Diary</h1>
		<p></p>

		{% set navPages = collections.all | eleventyNavigation %}
		<ul>
		{%- for entry in navPages %}
		<li>
			{{ entry.title }}
		</li>

			{% if entry.children %}
				<ul>
				{%- for entry in entry.children %}
					<li>
						<a href="{{ entry.url | url }}" class="text-blue-700 underline">{{ entry.title }}</a>
					</li>
				{%- endfor %}
				</ul>
			{% endif %}
		{%- endfor %}
		</ul>
	</main>

	<script src="/assets/main.js"></script>
</body>

</html>